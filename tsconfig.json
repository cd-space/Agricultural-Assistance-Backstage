{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",  // 这里会自动匹配所有 .ts 文件
    "src/**/*.d.ts", // 这里会自动匹配所有 .d.ts 文件
    "src/**/*.tsx",  // 这里会自动匹配所有 .tsx 文件
    "src/**/*.vue"   // 这里会自动匹配所有 .vue 文件
 ],
  "exclude": [
    "node_modules",
  ]
}
